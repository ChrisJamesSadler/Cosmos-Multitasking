<local:ScreenBase x:Class="WPFMachine.Absolute.AbsoluteScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                  xmlns:local="clr-namespace:WPFMachine"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid x:Name="LayoutRoot">
        <Canvas x:Name="mainCanvas" Visibility="Visible" />
        <Canvas Background="Transparent" Visibility="Visible">
            <Canvas x:Name="cnvsTop" Canvas.Left="0" />
        </Canvas>
    </Grid>
</local:ScreenBase>
